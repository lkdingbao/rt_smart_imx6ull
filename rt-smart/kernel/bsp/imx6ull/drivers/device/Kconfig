menu "Platform Device Configuration"

config RT_USING_GT9147
    bool "Enable GT9147"
    select RT_USING_I2C
    default y

    if RT_USING_GT9147
        config BSP_TOUCH_POINT_NUM
            int "Number of touch point"
            default 5
    endif

config RT_USING_PCF8574
    bool "Enable PCF8574"
    select RT_USING_I2C
    default y

    if RT_USING_PCF8574
        config BSP_PCF_COL_NUM
            int "Number of column per row"
            default 16
        config BSP_PCF_ROW_NUM
            int "Number of row per column"
            default 2
    endif

menuconfig RT_USING_ENET
    bool "Select Enet Device"
    default y

    if RT_USING_ENET
        config RT_USING_LAN8720
            bool "Enable LAN8720"
            default y
    endif

menuconfig RT_USING_CAMERA
    bool "Select Camera Device"
    default y

    if RT_USING_CAMERA
        config RT_USING_OV2640
            bool "Enable OV2640"
            default y
    endif

endmenu
